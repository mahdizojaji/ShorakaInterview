# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_DBNAME=your_database

# Database Connection Pooling Configuration
# Number of connections to maintain in the pool (default: 20)
DB_POOL_SIZE=20

# Additional connections beyond pool_size (default: 30)
DB_MAX_OVERFLOW=30

# Timeout for getting connection from pool in seconds (default: 30)
DB_POOL_TIMEOUT=30

# Recycle connections after N seconds (default: 3600 = 1 hour)
DB_POOL_RECYCLE=3600

# Validate connections before use (default: true)
DB_POOL_PRE_PING=true

# Enable SQL query logging (default: false)
DB_ECHO=false

# Environment Setting
ENV_SETTING=dev